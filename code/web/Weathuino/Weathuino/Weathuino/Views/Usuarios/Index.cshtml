@model List<UsuarioViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Usuários";
}

<h2>Usuários</h2>

<div class="d-flex justify-content-center align-items-center mb-4 mt-4">
    <label class="font-weight-bold">Filtrar por:</label>
    <div class="d-flex gap-3 mr-2 ml-3">
        <input type="number" placeholder="Id" class="form-control w-auto mr-2" />
        <input type="text" placeholder="Nome" class="form-control w-auto mr-2" />
        <input type="text" placeholder="E-mail" class="form-control w-auto mr-2" />
    </div>
    <div>
        <a class="btn btn-info" href="#">Filtrar</a>
        <a class="btn btn-dark" href="/Usuarios/Create">Novo</a>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th class="col-1">Ações</th>
        <th class="col-1">ID</th>
        <th class="col-4">Nome</th>
        <th class="col-2">E-mail</th>
        <th class="col-2">Perfil Acesso</th>
    </tr>

    @foreach (UsuarioViewModel usuario in Model)
    {
        <tr>
            <td>
                <a href="/Usuarios/Edit?id=@usuario.Id"><img class="icone-crud mr-1" src="~/imgs/icone_lapis.png" /></a>
                <a href="javascript:deletaRegistro(@usuario.Id)"><img class="icone-crud" src="~/imgs/icone_lixeira.png" /></a>
            </td>
            <td>@usuario.Id</td>
            <td>@usuario.Nome</td>
            <td>@usuario.Email</td>
            <td>@usuario.PerfilAcesso.Nome</td>
        </tr>
    }
</table>
<style>
    .icone-crud {
        width: 1.1em;
    }
</style>
<script>
    function deletaRegistro(id) {
        const deveDeletar = confirm('Tem certeza que deseja excluir este registro?');
        if (deveDeletar)
            document.location.href = `/Usuarios/Delete?id=${id}`;
    }
</script>