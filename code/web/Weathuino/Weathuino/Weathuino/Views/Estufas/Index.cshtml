@model List<EstufaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Estufas";
}

<h2>Estufas</h2>

<div class="d-flex justify-content-center align-items-center mb-4 mt-4">
    <label class="font-weight-bold">Filtrar por:</label>
    <div class="d-flex gap-3 mr-2 ml-3">
        <input type="number" placeholder="Id" class="form-control w-auto mr-2"/>
        <input type="text" placeholder="Nome" class="form-control w-auto mr-2"/>
    </div>
    <div>
        <a class="btn btn-info" href="#">Filtrar</a>
        <a class="btn btn-dark" href="/Estufas/Create">Novo</a>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th class="col-1">Ações</th>
        <th class="col-1">ID</th>
        <th class="col-4">Nome</th>
        <th class="col-2">Faixa Temperatura (°C)</th>
        <th class="col-2">Medidor</th>
    </tr>

    @foreach (EstufaViewModel estufa in Model)
    {
        <tr>
            <td>
                <a href="/Estufas/Edit?id=@estufa.Id"><img class="icone-crud mr-1" src="~/imgs/icone_lapis.png" /></a>
                <a href="javascript:deletaRegistro(@estufa.Id)"><img class="icone-crud" src="~/imgs/icone_lixeira.png" /></a>
            </td>
            <td>@estufa.Id</td>
            <td>@estufa.Nome</td>
            <td class="d-flex justify-content-between">
                @if (estufa.TemperaturaMinima == null && estufa.TemperaturaMaxima == null)
                {
                    <span class="font-italic">Não especificado</span>
                }
                else
                {
                    if (@estufa.TemperaturaMinima != null)
                    {
                        <span>Mín: @estufa.TemperaturaMinima?.ToString("F1")</span>
                    }
                    if (estufa.TemperaturaMaxima != null)
                    {
                        <span>Máx: @estufa.TemperaturaMaxima?.ToString("F1")</span>
                    }
                }
            </td>
            <td>@estufa.Medidor.Nome</td>
        </tr>
    }
</table>
<style>
    .icone-crud {
        width: 1.1em;
    }
</style>
<script>
    function deletaRegistro(id) {
        const deveDeletar = confirm('Tem certeza que deseja excluir este registro?');
        if (deveDeletar)
            document.location.href = `/Estufas/Delete?id=${id}`;
    }
</script>