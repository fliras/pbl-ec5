@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Estufas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/crud.css" asp-append-version="true" />
}

<h2>Estufas</h2>

<div class="filter-container">
    <div class="filter-inputs">
        <input id="id" type="number" placeholder="Id" class="filter-input id-input" />
        <input id="nome" type="text" placeholder="Nome" class="filter-input name-input" />
    </div>
    <ul class="filter-menu">
        <li class="filter-btn filter" onclick="filtraEstufas()"></li>
        <li class="filter-btn create" onclick="window.location.href='/Estufas/Create'"></li>
    </ul>
</div>

<div id="dadosEstufas"></div>

@section Scripts {
    <script src="~/js/estufas.js"></script>
}